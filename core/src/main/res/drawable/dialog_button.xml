<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="45" android:centerColor="#081b43" android:centerY="0.1" android:endColor="#09466e" android:startColor="#080b41" />
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="#ffffff" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="45" android:centerColor="#051639" android:centerY="0.1" android:endColor="#003558" android:startColor="#040630" />
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="#ffffff" />
        </shape>
    </item>
</selector>
