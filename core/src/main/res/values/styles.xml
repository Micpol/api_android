<resources>

    <!-- Base bannerActivity theme. -->
    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="Theme.CustomAlertDialog" parent="Base.V7.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AlertDialogButton">
        <item name="android:background">@drawable/dialog_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CoffeeDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SelectedLanguageRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/radio_button_color_checked</item>
        <item name="android:color">@color/radio_button_color_checked</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="NeutralDialogButtonNetigenApi" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <!--        <item name="android:backgroundTint">@color/dialog_grey_color</item>-->
        <item name="android:background">@drawable/dialog_button_netigen_api</item>
    </style>

    <style name="PositiveDialogButtonNetigenApi" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <!--        <item name="android:backgroundTint">@color/dialog_accent_dialog</item>-->
        <item name="android:background">@drawable/dialog_button_netigen_api</item>
    </style>

</resources>
